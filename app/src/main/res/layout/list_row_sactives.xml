<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:orientation="horizontal"
    android:padding="5dp">


    <TextView
        android:id="@+id/lrsa_tvId"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/anton"
        android:text="Tr-AB01C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lrsa_tvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/anton"
        android:text="$ 450.000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lrsa_tvEstado"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lrsa_tvEstado"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/anton"
        android:text="Solicitado"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/lrsa_tvId"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lrsa_tvId">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="82dp"
            android:layout_height="43dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/coda"
            android:text="Direccion de cargue:"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="41dp" />

        <TextView
            android:id="@+id/lrsa_tvDireccionCargue"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/anton"
            android:text="Cra 80 # 57 - 30, Medellin"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="35dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/tv"
            android:layout_width="82dp"
            android:layout_height="43dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/coda"
            android:text="Direccion de descargue:"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="98dp" />

        <TextView
            android:id="@+id/lrsa_tvDireccionDescargue"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/anton"
            android:text="Cra 30 # 04 - 09, Rionegro"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="35dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <TextView
            android:layout_width="82dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/coda"
            android:text="Fecha y Hora:"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="98dp" />

        <TextView
            android:id="@+id/lrsa_tvFechaHora"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/anton"
            android:text="15/07/2020 - 14:00"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="35dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>